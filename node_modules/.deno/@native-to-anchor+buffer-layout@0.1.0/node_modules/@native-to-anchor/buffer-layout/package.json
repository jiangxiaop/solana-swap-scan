{
  "name": "@native-to-anchor/buffer-layout",
  "description": "Buffer layout utilities for Solana programs.",
  "version": "0.1.0",
  "author": "acheron acheroncrypto@gmail.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/acheroncrypto/native-to-anchor.git",
    "directory": "client/packages/buffer-layout"
  },
  "keywords": [
    "buffer layout",
    "solana",
    "anchor",
    "borsh"
  ],
  "files": [
    "dist"
  ],
  "module": "./dist/esm/index.js",
  "main": "./dist/cjs/index.js",
  "browser": "./dist/browser/index.js",
  "types": "./dist/cjs/index.d.ts",
  "scripts": {
    "build": "rimraf dist/ && yarn build:node && yarn build:browser",
    "build:node": "tsc && tsc -p tsconfig.cjs.json",
    "build:browser": "rollup --config",
    "lint:fix": "prettier src/** -w",
    "lint": "prettier src/** --check",
    "watch": "tsc -p tsconfig.cjs.json --watch"
  },
  "dependencies": {
    "@solana/buffer-layout": "=4.0.0",
    "@solana/buffer-layout-utils": "=0.2.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "=21.0.2",
    "@rollup/plugin-node-resolve": "=13.1.3",
    "@rollup/plugin-replace": "=3.1.0",
    "@rollup/plugin-typescript": "=8.3.1",
    "@types/node": "=17.0.21",
    "prettier": "=2.7.1",
    "rimraf": "=3.0.2",
    "rollup": "=2.70.1",
    "rollup-plugin-terser": "=7.0.2",
    "tslib": "=2.3.1",
    "typescript": "=4.6.2"
  }
}
